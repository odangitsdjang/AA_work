<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar">
      <ul>
        <li class="logo"> <%= link_to "~Music App~", bands_url %> </li>
        <% if !logged_in?  %>
        <li class="right"> <%= link_to "Sign Up", new_user_url %> </li>
        <li class="right"> <%= link_to "Log In", new_sessions_url %> </li>
        <% end %>
      </ul>
    </nav>

      <div class="body">

        <% if !flash[:errors].nil? %>
        <ul>
          <% flash[:errors].each do |error| %>
          <li><%= error %></li>
          <% end %>
        </ul>
        <% end %>
        <% if logged_in?  %>
          <h1>Hello, <%= current_user.email %>~</h1>
          <%= button_to "Log out", sessions_url, method: :delete %>
        <% end %>

        <%= yield %>
      </div>
  </body>
</html>
